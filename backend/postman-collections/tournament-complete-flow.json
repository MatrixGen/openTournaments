  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Generate unique timestamp for each test run",
          "const timestamp = Date.now();",
          "pm.collectionVariables.set('timestamp', timestamp);",
          "console.log('Starting test with timestamp:', timestamp);",
          "",
          "// Set default IDs if not available from games endpoint",
          "if (!pm.environment.get('gameId')) {",
          "    pm.environment.set('gameId', 1);",
          "    pm.environment.set('platformId', 1);",
          "    pm.environment.set('gameModeId', 1);",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Flexible test that handles different success scenarios",
          "const acceptableStatusCodes = [200, 201, 204];",
          "pm.test(`Request completed with acceptable status (${pm.response.code})`, function () {",
          "    // For join endpoints, 400 might mean already joined (acceptable)",
          "    if (pm.request.url.toString().includes('/join')) {",
          "        pm.expect(pm.response.code).to.be.oneOf([200, 201, 400]);",
          "    } else {",
          "        pm.expect(pm.response.code).to.be.oneOf(acceptableStatusCodes);",
          "    }",
          "});"
        ]
      }
    }
