{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "seed-support-data": "node scripts/seedSupportData.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:reset": "sequelize db:drop && sequelize db:create && sequelize db:migrate && sequelize db:seed:all",
    "mig:generate": "sequelize-mig migration:generate",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "sequelize db:migrate:undo",
    "test:api": "newman run postman-collections/postman-collection.json -e postman-environments/postman-environment.json",
    "test:api:verbose": "newman run postman-collections/postman-collection.json -e postman-environments/postman-environment.json -r cli,json",
    "test:api:html": "newman run postman-collections/postman-collection.json -e postman-environments/postman-environment.json -r htmlextra --reporter-htmlextra-export reports/api-test-report.html",
    "test:api:ci": "newman run postman-collections/postman-collection.json -e postman-environments/postman-environment.json --suppress-exit-code",
    "test:complete-flow": "newman run postman-collections/tournament-complete-flow.json -e postman-environments/tournament-flow-environment.json",
    "test:complete-flow:html": "newman run postman-collections/tournament-complete-flow.json -e postman-environments/tournament-flow-environment.json -r htmlextra --reporter-htmlextra-export reports/complete-flow-report.html",
    "test:complete-flow:ci": "newman run postman-collections/tournament-complete-flow.json -e postman-environments/tournament-flow-environment.json --suppress-exit-code"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "africastalking": "^0.7.7",
    "axios-retry": "^4.5.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.6",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "sequelize-auto-migrations": "^1.0.3",
    "sequelize-cli": "^6.6.3",
    "sequelize-mig": "^3.1.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "umzug": "^3.8.2"
  }
}
