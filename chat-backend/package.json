{
  "name": "live-chat-platform",
  "version": "1.0.0",
  "main": "index.js",
  "description": "A flexible live chat API using Node.js, Express, and Socket.io",
  "author": "Parkstone",
  "license": "ISC",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon src/index.js",
    "sync": "scripts/sync-databases.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit/",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration/",
    "test:load": "artillery run tests/load/chat-load.yml",
    "test:load:report": "artillery run --output tests/load/report.json tests/load/chat-load.yml && artillery report tests/load/report.json",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detach": "docker-compose up -d --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:detach": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker system prune -f",
    "docker:logs": "docker-compose logs -f",
    "test:ci": "npm run test:unit && npm run test:integration",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix"
  },
  "keywords": [
    "live-chat",
    "api",
    "express",
    "socket.io"
  ],
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "bad-words": "^3.0.4",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "file-type": "^21.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.8.0",
    "joi": "^18.0.1",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.8.3",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "xss-clean": "^0.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "artillery": "^2.0.21",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.1",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.10",
    "redis-mock": "^0.56.3",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4"
  },
  "overrides": {
    "glob": "^10.4.5"
  }
}
